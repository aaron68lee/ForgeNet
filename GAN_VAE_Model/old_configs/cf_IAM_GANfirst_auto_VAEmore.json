        "mask_post": ["thresh","dilateCircle","errodeCircle"],
        "mask_random": false,
        "fg_masks_dir": "../data/IAM/fg_masks"
    },
    "validation": {
        "shuffle": false,
        "batch_size": 36,
        "a_batch_size": 1
    },
    
    "lr_scheduler_type": "none",
 
    "optimizer_type": "Adam",
    "optimizer": {
        "lr": 0.00015,
        "weight_decay": 0.0,
        "betas": [0.5,0.999]
    },
    "optimizer_type_discriminator": "Adam",
    "optimizer_discriminator": {
        "lr": 0.0002,
        "weight_decay": 0.0,
        "betas": [0.5,0.999]
    },
    "loss": {
        "perceptualDisc": "L1Loss",
        "auto": "pyramidL1Loss",
        "count": "MSELoss",
        "mask": "HingeLoss",
        "reconRecog": "CTCLoss",
        "genRecog": "CTCLoss",
        "genAutoStyle": "L1Loss"
    },
    "loss_weights": {
        "auto": 0.97,
        "perceptualDisc": 0.03,
        "VAE_KLD": 50,
        "discriminator": 1,
        "generator": 1,
        "count": 0.5,
        "mask": 0.5,
        "mask_generator": 0.5,
        "mask_discriminator": 0.5,
        "reconRecog": 0.000001,
        "genRecog": 0.0001,
        "genAutoStyle": 0.1

    },
    "loss_params":
        {
            "auto": {"weights":[0.4,0.3,0.3],
                     "pool": "avg"},
            "mask": {"threshold": 4}
        },
    "metrics": [],
    "trainer": {
        "class": "HWWithStyleTrainer",
        "iterations": 500000,
        "save_dir": "saved/",
        "val_step": -1,
        "save_step": 25000,
        "save_step_minor": 250,
        "log_step": 250,
        "verbosity": 1,
        "monitor": "loss",
        "monitor_mode": "none",
        "space_input": true,
        "style_together": true,
        "use_hwr_pred_for_style": true,
        "hwr_without_style":true,
        "more_param_names": ["keys"],
        "curriculum": {
            "0": [  
                        [1,"disc"],
                        [1,"gen"]],
            "50000": [  ["auto","style-ex-only"]],
            "50100": [  ["auto","style-ex-only"],
                        ["count","mask","mask-gen"],
                        ["mask-disc"]],
            "51500": [  ["disc","mask-disc"],
                        ["count","mask","mask-gen"],
                        ["auto","auto-gen"],
                        ["count","mask","mask-gen"],
                        ["disc","mask-disc"],
                        ["gen"],
                        ["disc","mask-disc"],
                        ["auto","auto-mask","auto-gen"],
                        ["count","mask","mask-gen"],
                        ["disc","mask-disc"],
                        ["gen"],
                        ["disc"],
                        ["gen"]]
        },
        "balance_loss": "sign_preserve_x0.75",

	"text_data": "../data/english_text.txt",

        "use_learning_schedule": false,
        "cache_spaced_label": false,
        "print_dir": "train_out/IAM_GANfirst_auto_VAEmore",
        "serperate_print_every": 5000,
        "print_every": 100,
        "DCGAN": false
    },
    "arch": "HWWithStyle", 
    "model": {
        "num_class": 80,
        "generator": "SpacedWithMask",
        "gen_extra_text": true,
        "gen_dim": 64,
        "gen_n_res1": 0,
        "gen_n_res2": 1,
        "gen_n_res3": 1,
        "gen_use_skips": true,
        "hwr": "CRNN_batch_norm_softmax",
        "pretrained_hwr": "saved/IAM_hwr_batchnorm_softmax_aug/checkpoint-latest.pth",
        "hwr_frozen": true,
        "count_std": 0.00000001,
        "dup_std": 0.000000001,
        "style": "VAE",
        "style_dim": 128,
        "num_keys": null,
        "global_pool": true,
        "attention": false,
        "discriminator": "condAP wide, no style, no global use low, no cond",
        "disc_dim": 32,
        "spacer": "duplicates",
        "pretrained_spacer": "saved/fast_balPrsrvFx_condDiscAPActuallyStr_noBG_VAEnew_smallS_percept2WithAuto_aug/checkpoint-iteration100000.pth",
        "create_mask": true,
        "pretrained_create_mask": "saved/fast_balPrsrvFx_condDiscAPActuallyStr_noBG_VAEnew_smallS_percept2WithAuto_aug/checkpoint-iteration100000.pth",
        "mask_discriminator": "with derivitive"

    }
}
