{
    "name": "IAM_GANfirst_auto_VAEmore",
    "cuda": true,
    "gpu": 0,
    "save_mode": "state_dict",
    "override": true,
    "super_computer":false,
    "data_loader": {
        "data_set_name": "AuthorHWDataset",

        "Xdata_dir": "/trainman-mount/trainman-storage-8308c0a4-7f25-47ad-ae22-1de9e3faf4ad",
        "data_dir": "../data/IAM/",
        "batch_size": 4,
        "a_batch_size": 1,
        "shuffle": true,
        "num_workers": 2,

        "img_height": 64,
